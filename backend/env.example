# Backend Environment Variables
# Copy this file to .env and update values

APP_NAME="SaaS Core API"
ENVIRONMENT="local"
DEBUG=true
LOG_LEVEL="INFO"

# MongoDB Configuration
MONGODB_URI="mongodb://localhost:27017"
MONGODB_DB_NAME="saas"

# JWT Configuration
JWT_SECRET_KEY="replace-me-with-strong-secret"
JWT_REFRESH_SECRET_KEY="replace-me-refresh-with-strong-secret"
JWT_ALGORITHM="HS256"
ACCESS_TOKEN_EXP_MINUTES=30
REFRESH_TOKEN_EXP_MINUTES=10080

# Password Policy
PASSWORD_MIN_LENGTH=12
PASSWORD_REQUIRE_SPECIAL=true

# SendGrid Email
SENDGRID_API_KEY="replace-with-sendgrid-key"
EMAIL_FROM="no-reply@saas.local"

# Stripe
STRIPE_SECRET_KEY="sk_test_placeholder"
STRIPE_WEBHOOK_SECRET="whsec_placeholder"

# CORS & Frontend
CORS_ORIGINS='["http://localhost:3000"]'
FRONTEND_BASE_URL="http://localhost:3000"
COOKIE_SECURE=false
COOKIE_SAMESITE="none"

# OpenAI / AI Agent
OPENAI_API_KEY="sk-your-openai-api-key-here"
OPENAI_MODEL="gpt-3.5-turbo"
OPENAI_TEMPERATURE=0.7

